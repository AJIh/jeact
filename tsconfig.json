{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "h",
    "importHelpers": true,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "./__tests__/**/*"]
}
